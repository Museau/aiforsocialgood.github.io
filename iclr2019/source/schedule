      <div class="blog-header">
        <h1 class="blog-title">Schedule <Br><small>${workshop_date_with_day}</small></h1>
      </div>

      <div class="row">

        <div class="col-sm-8 blog-main">

          <div class="blog-post schedule">

            <p>

% for d in schedule_date:
    % for talk in talks[d]:

    <%

    filename = talk['speaker_name'].replace(' ', '_')
    finput = open('{}/{}.txt'.format(schedule_items_dir, filename))
    lines = finput.readlines()
    infos = dict([tuple(l.strip().split(':')) for l in lines])

    %>

    <div class="schedule-item row">
    <h4>${talk["time"]} ${infos.get('title', '')}</h4>

   <p>
        ${infos.get('abstract', '')}
   </p>

    <div class="speaker">
    <div class="col-xs-3 person">
      <center><img class="img-circle hvr-buzz"
      src="${people[talk['speaker_name']]['img']}"></center>
      <h4 class="speaker-name">${talk["speaker_name"]}</h4>
      <p class="speaker-org">${people[talk["speaker_name"]]["affiliation"]}</p>
    </div>

    <p class="speaker-bio">
      <%include file="${talk['speaker_name'].replace(' ', '_')}.bio.html"/>
    </p>

    </div>
</div>

    % endfor
% endfor


